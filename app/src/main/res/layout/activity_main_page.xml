    <android.support.design.widget.NavigationView
        android:id="@+id/drawerPane"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Profile Box -->
                <RelativeLayout
                    android:id="@+id/profileBox"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/material_blue_grey_800"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/personal_profile_picture"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_profile_picture"
                        android:layout_marginTop="15dp"
                        android:onClick="goToMyProfile"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/personal_profile_picture"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jon Doe"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JonDoe"
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+20 xx xxxxxxxx"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Status"
                    android:onClick="navigateToStatusFragment"
                    android:textAllCaps="false">
                </Button>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Don't disturb mode"
                    android:onClick="toggleDontDisturbMode"
                    android:textAllCaps="false">
                </Button>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Update job &amp; location"
                    android:onClick="goToLocationServicesRegistrationPrompt"
                    android:textAllCaps="false">
                </Button>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Close Friends list"
                    android:onClick="closeFriendsList"
                    android:textAllCaps="false">
                </Button>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Privacy settings"
                    android:textAllCaps="false"
                    android:onClick="goToPrivacySettings">
                </Button>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Settings"
                    android:textAllCaps="false"
                    android:onClick="goToSettings">
                </Button>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:gravity="left|center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Registration"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:onClick="goToRegistration">
                </Button>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="?android:attr/dividerVertical"/>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

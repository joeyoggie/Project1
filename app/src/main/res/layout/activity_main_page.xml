<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.project1.MainPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/custom_recepient_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:inputType="textCapWords"
            android:hint="Enter the receient username here"/>

        <EditText
            android:id="@+id/custom_recepient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_recepient_username"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:hint="Enter the recepient name here"/>

        <Button
            android:id="@+id/custom_recepient_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:layout_below="@id/custom_recepient_name"
            android:layout_centerHorizontal="true"
            android:onClick="goToChatPage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_recepient_button"
            android:text="Or use the '+' at the bottom to select a contact from your contact list"/>

